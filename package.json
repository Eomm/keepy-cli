{
  "name": "keepy-cli",
  "version": "1.1.0",
  "description": "A CLI tool to save encripted KEY=VALUE pairs.",
  "main": "cli.js",
  "bin": {
    "keepy": "cli.js"
  },
  "scripts": {
    "test": "npm run lint && tap --coverage -j1 test/**/*.test.js",
    "coveralls": "tap --coverage-report=text-lcov | node ./node_modules/coveralls/bin/coveralls.js",
    "test-single": "tap",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "coverage": "npm test && npm run coveralls"
  },
  "author": "Manuel Spigolon <behemoth89@gmail.com> (https://github.com/Eomm)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eomm/keepy-cli"
  },
  "keywords": [
    "cli",
    "store",
    "environment",
    "encryption",
    "key-value",
    "utility",
    "keepy"
  ],
  "engines": {
    "node": ">=10.5.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commist": "^1.1.0",
    "dotenv": "^8.0.0",
    "enquirer": "^2.3.1",
    "file-utils-easy": "^1.2.0",
    "semver": "^6.3.0",
    "yargs-parser": "^13.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.5",
    "rimraf": "^3.0.0",
    "standard": "^14.0.2",
    "tap": "^14.2.3"
  }
}
